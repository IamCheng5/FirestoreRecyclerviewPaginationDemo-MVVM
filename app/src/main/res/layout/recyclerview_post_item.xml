<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/holo_orange_light"
    >

    <TextView
        android:id="@+id/postItemRec_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:paddingVertical="2dp"
        android:paddingStart="5dp"
        android:textStyle="bold"
        android:lines="1"
        app:layout_constraintEnd_toStartOf="@id/postItemRec_btn_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/postItemRec_tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingVertical="2dp"
        app:layout_constraintTop_toBottomOf="@id/postItemRec_tv_title"
        app:layout_constraintStart_toStartOf="@id/postItemRec_tv_title"
        app:layout_constraintEnd_toEndOf="@id/postItemRec_btn_delete"
        />
    <TextView
        android:id="@+id/postItemRec_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingVertical="2dp"
        app:layout_constraintStart_toStartOf="@id/postItemRec_tv_title"
        app:layout_constraintEnd_toEndOf="@id/postItemRec_btn_delete"
        app:layout_constraintTop_toBottomOf="@id/postItemRec_tv_description"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/postItemRec_btn_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_baseline_cancel_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/postItemRec_tv_title"
        app:layout_constraintBottom_toBottomOf="@id/postItemRec_tv_title"
        app:layout_constraintDimensionRatio="1:1"/>
</androidx.constraintlayout.widget.ConstraintLayout>